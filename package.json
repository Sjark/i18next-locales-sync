{
  "version": "0.1.0",
  "name": "i18next-locales-sync",
  "description": "Syncs i18next locale resource files against a primary language.\n",
  "author": "FelixMosh",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch --target=node",
    "build": "rm -rf dist && tsc",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "npm run build"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/glob": "^7.1.3",
    "husky": "^4.3.0",
    "memfs": "^3.2.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  }
}
